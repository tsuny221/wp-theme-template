@import "modules/_variables";
@import "breakpoints/_base";

@media (min-width: 480px) {
  @import "breakpoints/_480up";
}

@media (min-width: 600px) {
  @import "breakpoints/_600up";
}

@media (min-width: 960px) {
  @import "breakpoints/_960up";
}

@media (min-width: 1280px) {
  @import "breakpoints/_1280up";
}

//min-resolutionはretinaディスプレイの場合の表示
@media (min-resolution: 192dpi), (-webkit-min-device-pixel-ratio: 2) {
  @import "breakpoints/_2x"; //高解像度の画像を記載したりする
}
//印刷時
@media print {
  @import "breakpoints/_print";
}
